download :
ifeq (,$(wildcard $(CARMEN_HOME)/bin/axor_suzano/axor-3344.obj))
	$(info )
	$(info **************** **********************************************************************************************)
	$(info *	Dowloading 3D model Mercedes Axor 3344 without the trailer)
	$(info * Dont worry if the .mtl returns error, the gdown doesn't work properly wtth small files *)
	$(info * Check the file and if necessary, download it direct from the link in this makefie *)
	$(info ***************************************************************************************************************)
	$(info )
	$(CARMEN_HOME)/bin/gdown.pl https://drive.google.com/file/d/1Gm7KTyDN9oq7NUfvzJf19SQkCeFAbsuh/view?usp=sharing $(CARMEN_HOME)/bin/axor_suzano/axor-3344.obj
else

	$(info * The axor-3344.obj 3D model already exists *)
endif

